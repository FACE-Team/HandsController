<Window x:Class="HandsControllerGui.FileListDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Load" Height="250" Width="300">
    <Grid Background="WhiteSmoke">
        <Border Margin="2,2,2,2"
                CornerRadius="2"
                BorderBrush="Gray"
                BorderThickness="2">
            <StackPanel VerticalAlignment="Center">
                <Label Name="label" Content="List" Margin="0,0,0,5"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <ListBox Name ="lbAnimations"  Width="180" Height="170" Margin="0,0,0,0" VerticalContentAlignment="Center"/>
                    <Button Content="Load" Width="50" Height="30" Margin="30,0,0,0" Click="Button_Click_1"/>
            </StackPanel>
            </StackPanel>

        </Border>
    </Grid>
</Window>
